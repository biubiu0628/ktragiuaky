@model IEnumerable<ktragiuaky.Models.SinhVien>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.HoTen)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GioiTinh)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NgaySinh)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Hinh)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MaNganhNavigation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.HoTen)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.GioiTinh)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NgaySinh)
                </td>
                <td>
                    @if (!string.IsNullOrEmpty(item.Hinh))
                    {
                        <img src="@item.Hinh" alt="" style="width: 150px; height: 180px" />
                    }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MaNganhNavigation.MaNganh)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.MaSv">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.MaSv">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.MaSv">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
